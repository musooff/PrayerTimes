<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/greyLight</item>
        <item name="colorPrimaryDark">@color/blackLightText
        </item>
        <item name="colorAccent">@color/greenMain</item>
        <item name="android:windowBackground">@color/whiteDarker</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RippleTheme">
        <item name="colorControlHighlight">#FFF</item>
    </style>
    <style name="RippleItemBackground">
        <item name="android:theme">@style/RippleTheme</item>
        <item name="android:background">@drawable/bt_ripple_selector</item>
    </style>

</resources>
