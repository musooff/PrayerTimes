<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/intro2">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:textStyle="bold"
    android:text="Бо Тарчума"
    android:visibility="invisible"
    android:textColor="@color/white"
    android:layout_marginLeft="30dp"
    android:layout_marginBottom="-40dp"
    android:layout_above="@+id/iv_main"
    android:id="@+id/iv_second"
    />

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scaleType="fitXY"
    android:layout_centerInParent="true"
    android:src="@drawable/ic_intro_quran"
    android:id="@+id/iv_main"/>

<ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/ic_intro_god"
    android:layout_marginRight="30dp"
    android:layout_alignParentRight="true"
    android:layout_marginBottom="-40dp"
    android:layout_above="@+id/iv_main"
    android:id="@+id/iv_third"
    />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:textColor="@color/white"
    android:text="Куръони Карим"
    android:textSize="30sp"
    android:textStyle="bold"
    android:layout_marginBottom="70dp"
    android:gravity="center"/>


</RelativeLayout>